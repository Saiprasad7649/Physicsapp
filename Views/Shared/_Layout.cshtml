<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Physics</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PhysicsVSC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Physics</a>
                <button class="navbar-toggler me-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarPhysics" aria-controls="navbarPhysics" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Offcanvas toggle button -->
                <button class="btn btn-outline-light d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#physicsMenu" aria-controls="physicsMenu" aria-label="Open sidebar menu">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarPhysics">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Home">Kinematic Equation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Home">Work Done by a Force</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Home">Universal Gravitation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Home">
                                <i class="fas fa-ranking-star"></i> Ranking
                                <span class="badge bg-warning text-dark">4</span>
                            </a>
                        </li>
                        <!-- Offcanvas toggle button for large screens -->
                        <li class="nav-item d-none d-lg-block">
                            <button class="btn btn-outline-light ms-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#physicsMenu" aria-controls="physicsMenu" aria-label="Open sidebar menu">
                                <i class="fas fa-bars"></i>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Offcanvas sidebar -->
        <div class="offcanvas offcanvas-end bg-light" tabindex="-1" id="physicsMenu" aria-labelledby="physicsMenuLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="physicsMenuLabel">Physics Calculators</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="list-group">
                    <li class="list-group-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Home">Kinematic Equation</a>
                    </li>
                    <li class="list-group-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Home">Work Done by a Force</a>
                    </li>
                    <li class="list-group-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Home">Universal Gravitation</a>
                    </li>
                    <li class="list-group-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Home">
                            <i class="fas fa-ranking-star"></i> Ranking
                            <span class="badge bg-warning text-dark">4</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PhysicsVSC - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
